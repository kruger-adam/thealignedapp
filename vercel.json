{
  "crons": [
    {
      "path": "/api/ai-question",
      "schedule": "0 12 * * *"
    }
  ],
  "functions": {
    "app/api/**/*.ts": {
      "memory": 512,
      "maxDuration": 10
    },
    "app/api/ai-assistant/**/*.ts": {
      "memory": 1024,
      "maxDuration": 30
    },
    "app/api/ai-question/**/*.ts": {
      "memory": 512,
      "maxDuration": 60
    }
  }
}

